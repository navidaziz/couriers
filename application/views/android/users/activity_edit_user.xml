
<TextView
android:id="@+id/title_users"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/franchise_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Franchise Id"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/users"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/role_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Role Id"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/franchise_id"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/role_id"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/father_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Father Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/cnic"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Cnic"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/father_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/user_email"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="User Email"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/cnic"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/user_mobile_number"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="User Mobile Number"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/user_email"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/user_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="User Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/user_mobile_number"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/user_password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="User Password"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/user_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/user_image"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="User Image"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/user_password"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_users"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>